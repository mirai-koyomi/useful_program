= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :screen_name
    = f.text_field :screen_name
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :password_digest
    = f.text_field :password_digest
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
