%h1 Listing users

%table
  %thead
    %tr
      %th Screen name
      %th Name
      %th Password digest
      %th Description
      %th Comment
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.screen_name
        %td= user.name
        %td= user.password_digest
        %td= user.description
        %td= user.comment
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

